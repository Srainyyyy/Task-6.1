<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="myAppName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="content_font">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/switch_btn_colors</item>
    </style>
    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/green_rectangle_button</item>
        <item name="android:textColor">#000000</item> <!-- 设置按钮文本颜色为白色 -->
        <item name="android:textStyle">bold</item> <!-- 设置按钮文本为粗体 -->
        <item name="android:layout_width">300dp</item>
    </style>


</resources>